{
  "name": "@contact-tracker/validation",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/validate/src",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/validation",
        "main": "packages/validation/src/index.ts",
        "tsConfig": "packages/validation/tsconfig.lib.json",
        "assets": [],
        "spec": false
      }
    },
    "generate-zod": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "node scripts/generate-zod.mjs",
          "npx prettier --write ./src/lib/zod/*.ts ./src/lib/schemas/*.json ./src/index.ts"
        ],
        "parallel": false,
        "cwd": "packages/validation"
      }
    }
  }
}
