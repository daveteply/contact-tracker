<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
    <PackageReference Include="TypeGen" Version="7.0.0" />
  </ItemGroup>

  <Target Name="RestoreTypeGen" BeforeTargets="Build">
    <Exec Command="dotnet tool restore" StandardOutputImportance="low" />
  </Target>

  <Target Name="GenerateTypeScript" AfterTargets="Build" Condition="'$(Configuration)' == 'Debug'">
    <Exec Command="dotnet typegen generate" />
  </Target>

</Project>
