{
  "name": "Tracker UI (Next.js)",
  "dockerComposeFile": [
    "../../docker-compose.yml",
    "docker-compose.devcontainer.yml"
  ],
  "service": "tracker-ui",
  "workspaceFolder": "/workspace",
  "forwardPorts": [3000, 5238],
  "postCreateCommand": "npm install",
  "postStartCommand": "cd /workspace/ui/tracker-ui && npx nx dev tracker-ui -- --hostname 0.0.0.0",
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/mikaello/devcontainer-features/modern-shell-utils:2.0.0": {},
    "ghcr.io/devcontainers/features/common-utils": {
      "installZsh": true,
      "installOhMyZsh": true,
      "installOhMyZshConfig": true,
      "configureZshAsDefaultShell": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "github.vscode-github-actions",
        "nrwl.angular-console",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "runServices": ["postgres", "pgadmin", "tracker-api", "tracker-ui"]
}
