FROM mcr.microsoft.com/dotnet/sdk:10.0
ARG USERNAME=vscode
ARG USER_UID=1000
ARG USER_GID=$USER_UID

# Add existing user to sudoers and install required packages
RUN apt-get update \
    && apt-get install -y sudo git zsh \
    && rm -rf /var/lib/apt/lists/*

# Create user with different GID to avoid conflict, or use existing user
RUN if id -u $USER_UID >/dev/null 2>&1; then \
    EXISTING_USER=$(id -un $USER_UID); \
    usermod -l $USERNAME -d /home/$USERNAME -m -s /usr/bin/zsh $EXISTING_USER; \
    groupmod -n $USERNAME $(id -gn $USER_UID); \
    else \
    groupadd --gid $USER_GID $USERNAME \
    && useradd --uid $USER_UID --gid $USER_GID -m $USERNAME --shell /usr/bin/zsh; \
    fi \
    && echo $USERNAME ALL=\(root\) NOPASSWD:ALL > /etc/sudoers.d/$USERNAME \
    && chmod 0440 /etc/sudoers.d/$USERNAME

WORKDIR /workspace
RUN chown -R $USERNAME:$USERNAME /workspace
ENV DOTNET_ROOT=/usr/share/dotnet
ENV PATH=/usr/share/dotnet:/usr/bin:$PATH
RUN mkdir -p /vscode && chown -R $USERNAME:$USERNAME /vscode

USER $USERNAME
RUN dotnet tool install --global dotnet-ef --version 10.*
ENV PATH="$PATH:/home/$USERNAME/.dotnet/tools"
ENV DOTNET_CLI_HOME=/home/$USERNAME
ENV SHELL=/usr/bin/zsh
ENV HOME=/home/$USERNAME

EXPOSE 5238